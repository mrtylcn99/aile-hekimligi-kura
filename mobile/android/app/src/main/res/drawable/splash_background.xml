<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF6B35"
                android:centerColor="#FF8C42"
                android:endColor="#FFA560"
                android:type="linear" />
        </shape>
    </item>

    <!-- Optional overlay pattern -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>

</layer-list>