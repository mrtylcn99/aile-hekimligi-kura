<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Development - Metro bundler -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">10.0.3.2</domain>

        <!-- Production - Your backend domain -->
        <domain includeSubdomains="true">your-backend-app.onrender.com</domain>

        <!-- Additional trusted domains -->
        <domain includeSubdomains="true">vercel.app</domain>
        <domain includeSubdomains="true">mongodb.com</domain>
    </domain-config>

    <!-- Allow cleartext traffic for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>